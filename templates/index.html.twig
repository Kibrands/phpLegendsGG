{# index.html.twig #}
{% extends "base.html.twig" %}
{% block title %}{{ parent() }}Estadísticas de League of Legends{% endblock %}
{% block body %}
    <div class="container-fluid main-container">
        <div class="px-5">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    <img id="beemo" class="img img-fluid" width="400" alt="Beemo" src="{{ asset('img/teemo.png') }}"/>
                </div>
                <div class="col-12">
                    <h4 class="text-center">Búsqueda de Invocadores</h4>
                </div>
                <div class="col-12">
                    <form id="findSummoner" action="{{ path('find-summoner') }}" method="post">
                        <div class="row w-75 mx-auto">
                            <div class="col-xs-12 col-md-9">
                                <input class="form-control" type="text" name="summonerName" id="summonerName" required placeholder="Nombre de invocador">
                            </div>
                            <div class="col-xs-12 col-md-3">
                                <select id="server" class="form-control" name="server" id="server">
                                    <option value="na" selected>NA</option>
                                    <option value="euw">EUW</option>
                                    <option value="eun">EUN</option>
                                    <option value="br">Brazil</option>
                                    <option value="lan">LAN</option>
                                    <option value="las">LAS</option>
                                    <option value="tr">Turkey</option>
                                    <option value="ru">Russia</option>
                                    <option value="oc">Oceania</option>
                                    <option value="jp">Japan</option>
                                    <option value="kr">Korea</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <div class="text-center mx-auto mt-3">
                                    <div class="link_wrapper">
                                        <button type="submit" class="search-button">Buscar</button>
                                        <div class="icon">
                                            <i class="fas fa-search"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="border border-secondary m-5 py-5 shadow">
            <div class="w-75 mx-auto">
                <div class="row">
                    <div class="col-12 mb-3">
                        <h5 class="text-center mx-auto">Suscríbete a nuestro boletín para estar a la última</h5>
                    </div>
                    <div class="col-12">
                        <form id="subscriptionForm" action="{{ path('subscription') }}" method="post">
                            <input id="subEmail" name="subEmail" type="email" placeholder="email@example.com" required class="form-control" >
                            <div class="row text-center mx-auto mt-2">
                                <div class="col-12 mt-2">
                                    <button type="submit" class="btn btn-dark btn-block">¡¡Suscríbeme!!</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="push"/>
    </div>
{% endblock %}